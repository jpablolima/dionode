pipeline {
    agent {
        label  'nodedio'
    }
    stages {
        stage ("build") {
            steps{
                echo   "building the application..."
                node -v
                cd /src/main.js
            }
    }
        stage("test") {
            steps{
                echo  "testing the application..."
            }

        }
        stage("deploy") {
            steps {
                echo  "deplying the application..."
            }
        }
    }
}